<div class="modal @CssUtils.BoolToVisible(IsVisible)"
     @onclick="@OnClickedBehind" @onmousedown="@OnMouseDown">
    <div class="modal-content" @onclick:stopPropagation="true" @onmousedown:stopPropagation="true">
        <div class="modal-header">
            <h3>@Title</h3>
            @if (IsCloseable)
            {
                <div class="modal-close">
                    <button class="button-transparent" @onclick="@OnCloseClicked">
                        <Icon Glyph="Icons.Close" />
                    </button>
                </div>
            }
        </div>
        <div class="modal-body">
            @Body
        </div>
    </div>
</div>
