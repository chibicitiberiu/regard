@typeparam Model

<div class="tree-view">
    <ul class="tree-item-children">
        @foreach (var child in Root.Children)
        {
            @BuildTreeItem(child);
        }
    </ul>
</div>


@code {
    private RenderFragment BuildTreeItem(TreeViewNode<Model> item)
    {
        return __builder =>
        {
            <li class="tree-item @CssUtils.BoolToClass(item.IsSelected, "selected") @CssUtils.BoolToClass(!item.IsEnabled, "disabled")">
                <a @onclick="() => OnItemClicked(item)">@ItemTemplate(item)</a>
                @if (item.IsExpanded)
                {
                    <ul class="tree-item-children">
                        @foreach (var child in item.Children)
                        {
                            @BuildTreeItem(child)
                        }
                    </ul>
                }
            </li>
        };
    }
}