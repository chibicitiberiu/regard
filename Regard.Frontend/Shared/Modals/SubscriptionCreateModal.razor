<Modal @ref="Modal">
    <Title>Create subscription</Title>
    <Body>
        <SubscriptionCreateForm Submitted="OnSubmitted"/>
    </Body>
</Modal>

@code {
    Modal Modal { get; set; }

    public async Task Show()
    {
        await Modal.Show();
    }

    private async Task OnSubmitted()
    {
        await Modal.Close();
    }
}
